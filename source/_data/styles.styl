:root {
  --waline-theme-color: #08e !important;
  --waline-active-color: #3ae !important;
}
.comments {
  overflow: visible;
}
.wl-emoji-popup {
  width: 100%;
}
.wl-content .wl-emoji {
  height: 3em !important;
  vertical-align: sub !important;
}
.wl-content .wl-emoji[src^='/images/emote/小黄脸/'], .wl-content .wl-emoji[src^='/images/emote/tv_小电视/'], .wl-content .wl-emoji[src^='/images/emote/喵/'] {
  height: 1.5em !important;
}

.header, .site-brand-container {
  border-radius: 0 0 20px 20px !important;
}
.main-inner > .sub-menu, .main-inner > .post-block, .main-inner > .tabs-comment, .main-inner > .comments, .main-inner > .pagination, .sidebar-inner {
  -webkit-backdrop-filter: blur(20px);
  backdrop-filter: blur(20px);
}
.sidebar-toggle, .back-to-top {
  border-radius: 10px;
}
.hljs-subst {
  color: var(--highlight-foreground);
}
.post-body .tabs ul.nav-tabs, .tabs-comment ul.nav-tabs {
  background: #fff9;
  border-radius: 10px;
}
@media (prefers-color-scheme: dark) {
  .post-body .tabs ul.nav-tabs, .tabs-comment ul.nav-tabs {
    background: #2229;
  }
}
th {
  text-align: center !important;
}
:not(.highlight) > div.table-container {
  border: 2px solid #ddd;
  border-radius: 10px;
  margin: 0 0 20px;
}
table {
  margin: 0;
}
th {
  border-bottom-width: 2px;
}
table tr:first-child th {
  border-top: none;
}
table tr:last-child td {
  border-bottom: none;
}
table tr th:first-child, table tr td:first-child {
  border-left: none;
}
table tr th:last-child, table tr td:last-child {
  border-right: none;
}
details {
  background: #3bf1;
  border: 1px solid #3bf;
  border-radius: 20px;
  margin: 20px 0;
  padding: 10px 10px 0;
}
details summary {
  cursor: pointer;
  font-weight: bold;
  margin: -10px -10px 0 !important;
  padding: 10px;
}
details[open] summary {
  border-bottom: 1px solid #3bf;
  margin-bottom: 10px !important;
}
:not(.wl-reaction-img):not(.wl-avatar > *):not(.wl-user):not(.cc-license > *):not(div.group-picture-column > *) > img:not(.wl-emoji):not(.fancybox-image):not(.f-thumbs__slide__img):not(.link-grid-image):not(.site-author-image):not(.avatar):not(.emote):not(.face-icon) {
  border-radius: 20px;
  min-width: 50px;
}
img.avatar {
  border-radius: 50%;
  min-width: 50px;
}
img.emote {
  display: inline;
  height: 2.5em;
  margin: 0 !important;
  vertical-align: sub;
}
img.emote[src^='/images/emote/小黄脸/'], img.emote[src^='/images/emote/tv_小电视/'], img.emote[src^='/images/emote/喵/'] {
  height: 1.25em;
}
img.face-icon {
  border-radius: 50%;
  height: 1.5rem;
  left: 4rem;
  position: absolute;
  top: 4rem;
}
img.face-icon.second {
  left: 2.6rem;
}
img.fancybox-image, img.face-icon {
  opacity: 1;
}
div.group-picture div.group-picture-row:first-child div.group-picture-column:first-child img {
  border-top-left-radius: 20px;
}
div.group-picture div.group-picture-row:first-child div.group-picture-column:last-child img {
  border-top-right-radius: 20px;
}
div.group-picture div.group-picture-row:last-child div.group-picture-column:first-child img {
  border-bottom-left-radius: 20px;
}
div.group-picture div.group-picture-row:last-child div.group-picture-column:last-child img {
  border-bottom-right-radius: 20px;
}
.link-grid-container, blockquote, .post-copyright ul {
  border-radius: 20px;
}
.post-footer {
  overflow-wrap: break-word;
  text-align: justify;
}
a.inaccessible {
  position: relative;
}
a.inaccessible:hover::before {
  background: #222;
  border-radius: 5px;
  color: #eee;
  content: '您所在的国家 / 地区可能无法访问该链接。';
  font-size: 16px;
  padding: 5px;
  position: absolute;
  top: 24px;
  z-index: 10;
}

@font-face {
  font-family: 'iconfont';
  src: url(/css/iconfont.ttf) format('truetype');
}
.custom {
  font-family: 'iconfont';
  font-style: normal;
  margin-right: 2px;
}
.gitee:before {
  content: '\e677';
}
